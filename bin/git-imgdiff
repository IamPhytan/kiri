#!/bin/bash

echo
echo "KiRI Command: $(basename $0) $@"

a="$1"
b="$2"

if [[ "$2" != "" ]]; then
	b="$2"
fi

svg1=$(basename "$a" | sed "s|from_|sch1-|g")
svg2=$(basename "$b" | sed "s|to_|sch2-|g")

echo ""
echo "Creating $(realpath ${svg1})"
echo "Creating $(realpath ${svg2})"

plotgitsch_svg_tweaks $a 2> /dev/null
plotgitsch_svg_tweaks $b 2> /dev/null

# Rename/move file
# Sometimes an empty file is being created
mv -f "$a" "${svg1}" 2> /dev/null
mv -f "$b" "${svg2}" 2> /dev/null
